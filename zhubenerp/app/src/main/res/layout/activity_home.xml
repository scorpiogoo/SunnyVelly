<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erp.zhubenerp.HomeActivity">

    <FrameLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar_root">

    </FrameLayout>

    <com.erp.zhubenerp.widget.bottombar.BottomTabGroup
        android:id="@+id/bottom_bar_root"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_vertical_root_bg"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <com.erp.zhubenerp.widget.bottombar.BottomTab
            android:id="@+id/tab_01"
            style="@style/bottomTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintEnable="false"
            app:drawableTop="@drawable/main_bottombar_icon_home_selector"
            app:tabText="待办事项"/>

        <com.erp.zhubenerp.widget.bottombar.BottomTab
            android:id="@+id/tab_02"
            style="@style/bottomTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:drawableTop="@drawable/main_bottombar_icon_customer_selector"
            app:hintEnable="false"
            app:tabText="部门职能"/>

        <com.erp.zhubenerp.widget.bottombar.BottomTab
            android:id="@+id/tab_03"
            style="@style/bottomTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintEnable="false"
            app:drawableTop="@drawable/main_bottombar_icon_car_source_selector"
            app:tabText="考勤"/>

        <com.erp.zhubenerp.widget.bottombar.BottomTab
            android:id="@+id/tab_04"
            style="@style/bottomTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintEnable="false"
            app:drawableTop="@drawable/main_bottombar_icon_remind_selector"
            app:tabText="我"/>
    </com.erp.zhubenerp.widget.bottombar.BottomTabGroup>
</RelativeLayout>
